{
	"env": {
		"node": true,
		"browser": true,
		"es2017": true
	},
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module"
	},
	"extends": ["eslint:recommended"],
	"plugins": ["svelte3"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"ignorePatterns": ["build/"],
	"rules": {
		"no-var": "error",
		"semi": "error",
		"max-params": ["error", 6],
		"eqeqeq": "error"
	}
}
